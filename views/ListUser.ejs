<div>
            <div class="container my-5">
                <h1 class="text-center mb-4">Danh Sách Người Dùng</h1>
            

                <!-- Table danh sách người dùng -->
                <table class="table table-striped table-hover">
                  <thead class="table-dark">
                    <tr>
                      <th>STT</th>
                      <th>username</th>
                      <th>fullname</th>
                      <th>Address</th>
                      <th>setting</th>
                      <div>

                    </tr>

                  </thead>
                  <tbody >  
        <% for(let i=0;i<rows.length;i++) { %>
          <tr>
              <th scope="row">
                  <%= i+1 %>
              </th>
              <th>
                <td>
                    <%= rows[i].username %>
                </td>
                <td>
                    <%= rows[i].password %>
                </td>
                <td>
                    <%= rows[i].fullname %>
                </td>
                <td>
                    <%= rows[i].address %>
                </td>
                <td>
                    <%= rows[i].sex %>
                </td>
                <td>
                    <%= rows[i].email %>
                </td>
                <td>
                  <button class="btn btn-info btn-sm me-2" onclick="viewUser(2)">
                      <i class="fa fa-eye"></i> Xem
                  </button>
                  <button class="btn btn-warning btn-sm me-2" onclick="editUser(2)">
                      <i class="fa fa-pencil-square-o"></i> Sửa
                  </button>
                  <button class="btn btn-danger btn-sm" onclick="deleteUser(2)">
                      <i class="fa fa-trash"></i> Xóa
                  </button>
                  <script>
                    function viewUser(userId) {
                          alert(`Xem thông tin người dùng có ID: ${userId}`);
                      }

                      function editUser(userId) {
                          alert(`Sửa thông tin người dùng có ID: ${userId}`);
                      }

                      function deleteUser(userId) {
                          if (confirm("Bạn có chắc chắn muốn xóa người dùng này?")) {
                              alert(`Người dùng có ID: ${userId} đã bị xóa.`);
                              // Thực hiện logic xóa ở đây (AJAX hoặc cập nhật server)
                          }
                      }
                  </script>
              </td>
              <style>
                  .btn i {
                    margin-right: 1px;
                  }
                  .table-dark {
                    margin: 100%
                  }
              </style>  
              </th>
              <td>
                  <span class="setting"><i class="fa fa-eye" aria-hidden="true"></i></span>
                  <span class="setting"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></span>
                  <span class="setting"><i class="fa fa-trash" aria-hidden="true"></i></span>
              </td>
          </tr>
          
          <% } %>

                  </tbody>

                </table>
              </div>

            </div>
            